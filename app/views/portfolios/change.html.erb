
<h1>ポートフォリの削除　編集画面</h1>
<% if @portfolios.any? %>
  <% @portfolios.each do |portfolio| %>
    <div>
      <h2><%= portfolio.title %></h2>
      <p><%= portfolio.content %></p>
      <%= link_to '編集', edit_portfolio_path(@portfolio) %>
<%= link_to '削除', @portfolio, method: :delete, data: { confirm: '本当に削除しますか？' } %>
    </div>
  <% end %>
<% else %>
  <p>投稿がありません。</p>
<% end %>



<%= link_to 'ポートフォリを投稿する', new_portfolio_path %>
